{
  "name": "@munirmardinli-dev/release",
  "version": "0.0.9",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "description": "Automated Release Workflow Toolkit - Semantic Release, Changelog Generation & GitHub Integration for Node.js/TypeScript Projects. CI/CD-ready package versioning and deployment automation.",
  "bin": {
    "munir-release": "./lib/src/cli.js"
  },
  "files": [
    "lib",
    ".releaserc"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "readmeFilename": "README.md",
  "keywords": [
    "semantic-release",
    "automated-releases",
    "versioning",
    "changelog",
    "ci-cd",
    "devops-tools",
    "github-actions",
    "nodejs",
    "typescript",
    "workflow-automation",
    "munirmardinli",
    "release-management"
  ],
  "exports": {
    ".": {
      "import": "./lib/src/index.js",
      "require": "./lib/src/index.js"
    },
    "./package.json": "./package.json",
    "./.releaserc": {
      "import": "./.releaserc",
      "require": "./.releaserc"
    },
    "./types": {
      "import": "./lib/src/types.js",
      "require": "./lib/src/types.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "license": "MIT",
  "homepage": "https://munirmardinli-dev.github.io/release",
  "bugs": {
    "url": "https://github.com/munirmardinli-dev/release/issues",
    "email": "Munir@Mardinli.de"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/munirmardinli-dev/release.git"
  },
  "author": {
    "name": "Munir Mardinli",
    "email": "Munir@Mardinli.de",
    "url": "https://linktr.ee/munirmardinli"
  },
  "funding": {
    "type": "individual",
    "url": "https://linktr.ee/munirmardinli"
  },
  "contributors": [
    {
      "name": "Munir Mardinli",
      "email": "Munir@Mardinli.de",
      "url": "https://linktr.ee/munirmardinli"
    }
  ],
  "dependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^24.3.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^24.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
